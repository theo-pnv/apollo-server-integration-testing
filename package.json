{
  "name": "apollo-server-integration-testing-koa",
  "version": "1.0.0",
  "description": "Test helper for writing apollo-server integration tests using Koa",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "repository": "https://github.com/theo-pnv/apollo-server-integration-testing-koa",
  "author": "Theo Penavaire <hey@theopnv.com>",
  "keywords": [
    "GraphQL",
    "Apollo",
    "Server",
    "Javascript",
    "Testing",
    "Integration Testing"
  ],
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rimraf dist/",
    "compile": "tsc",
    "prepublish": "yarn clean && yarn compile",
    "dev": "tsc --watch",
    "prettier": "prettier --check src"
  },
  "dependencies": {
    "apollo-server-core": "^2.19.0",
    "apollo-server-koa": "^2.19.0",
    "koa": "^2.13.0",
    "node-mocks-http": "^1.8.0"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.1.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.7.3"
  },
  "peerDependencies": {
    "graphql": "^0.12.0 || ^0.13.0 || ^14.0.0 || ^15.0.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts}": "prettier --write"
  }
}
